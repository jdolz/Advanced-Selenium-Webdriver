<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SmokeTestSuite" verbose="1">

	<listeners>
		<listener class-name="com.herokuapp.theinternet.TestListener"></listener>
	</listeners>

	<test name="PositiveLogInTest">
		<classes>
			<class name="com.herokuapp.theinternet.login.PositiveLogInTests" />
		</classes>
	</test>

	<test name="AlertsTests">
		<classes>
			<class name="com.herokuapp.theinternet.alerts.AlertsTests" />
		</classes>
	</test>

	<test name="UploadTests">
		<classes>
			<class name="com.herokuapp.theinternet.uploadingFiles.FileUploaderTests" />
		</classes>
	</test>

</suite>
